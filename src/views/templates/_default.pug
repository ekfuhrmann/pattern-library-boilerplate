include ../layouts/general/_head

//- If extra includes content is necessary per page
block includes

//- Define page variables here such as 'title' and 'description'
block vars

doctype html
html(lang='en-US')
  head
    +headContent(title, description)
    block head

  body
    //- SVG Inline Spritesheet
    .svg__spritesheet
      include ../layouts/includes/inline.svg

    //- Sidebar
    include ../layouts/general/_sidebar

    //- Content
    main.pl-container
      .pl-page
        block content

      //- Footer
      include ../layouts/general/_footer

    //- Scripts
    if productionMode
      script(src='assets/scripts/main.min.js')
    else
      script(src='assets/scripts/main.js')

    block scripts
    //- If extra scripts are needed replace here
